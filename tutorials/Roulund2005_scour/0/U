FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0.46 0 0);

boundaryField
{
    top
    {
        type            slip;
    }
    bottom
    {
        type            zeroGradient;
    }
    inlet
    {
        type            timeVaryingMappedFixedValue;
        mapMethod       nearest;
        offset          constant (0 0 0);
        value           uniform (0 0 0);
    }
    outlet
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            slip;
    }
    pier
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}


